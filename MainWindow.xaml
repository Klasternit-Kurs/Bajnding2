<Window x:Class="Bajnding2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bajnding2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
	<DockPanel>
		<StackPanel DockPanel.Dock="Right" VerticalAlignment="Center">
			<Button Content="Unos" Margin="0 20" FontSize="42" Click="Unos" />
			<Button Content="Brisanje" Margin="0 20" FontSize="42" Click="Obrisi"/>
			<Button Content="Izmena" Margin="0 20" FontSize="42" Click="Izmena"/>
		</StackPanel>
		<DataGrid Name="dg" ColumnWidth="*" IsReadOnly="True" SelectionMode="Single" FontSize="42"/>
	</DockPanel>
</Window>
