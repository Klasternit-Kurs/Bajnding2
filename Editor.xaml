<Window x:Class="Bajnding2.Editor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bajnding2"
        mc:Ignorable="d"
        Title="Editor" Height="450" Width="800" WindowStyle="None">
	<UniformGrid Columns="2">
		<Label Content="Ime:" FontSize="42"/>
		<TextBox Name="txtIme" Text="{Binding Ime, UpdateSourceTrigger=Explicit}" FontSize="42"/>
		<Label Content="Prezime: " FontSize="42"/>
		<TextBox Text="{Binding Prezime, UpdateSourceTrigger=Explicit}" FontSize="42"/>
		<Label Content="Starost: " FontSize="42"/>
		<TextBox Text="{Binding Godine, UpdateSourceTrigger=Explicit}" FontSize="42"/>
		<Button Content="Otkazi" FontSize="42" Click="Izlaz"/>
		<Button Content="OK" FontSize="42" Click="Unos"/>
	</UniformGrid>
</Window>
